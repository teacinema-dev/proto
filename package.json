{
	"name": "@teacinema-dev/contracts",
	"version": "1.0.15",
	"description": "Protobuf definitions and generated TypeScript types",
	"files": [
		"src/proto",
		"src/generated"
	],
	"scripts": {
		"clean": "rm -rf dist",
		"generate": "buf generate",
		"proto:gen": "npx protoc -I ./src/proto ./src/proto/*.proto --ts_proto_out=./src/generated --ts_proto_opt=nestJs=true",
		"publish:public": "npm publish --access public"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@bufbuild/buf": "^1.58.0",
		"ts-proto": "^2.7.7"
	},
	"dependencies": {
		"@nestjs/microservices": "^11.1.7",
		"rxjs": "^7.8.2"
	}
}
