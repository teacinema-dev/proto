{
	"name": "@teacinema-dev/contracts",
	"version": "1.0.65",
	"description": "Protobuf definitions and generated TypeScript types",
	"files": [
		"proto",
		"gen/ts",
		"dist"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"clean": "rm -rf dist",
		"build": "tsc -p tsconfig.build.json",
		"proto:ts": "npx protoc -I ./proto ./proto/*.proto --ts_proto_out=./gen/ts --ts_proto_opt=nestJs=true,package=omit",
		"proto:go": "npx protoc -I ./proto --go_out=./gen/go --go_opt=paths=source_relative --go-grpc_out=./gen/go --go-grpc_opt=paths=source_relative ./proto/media.proto",
		"generate": "yarn proto:ts && yarn proto:go"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@bufbuild/buf": "^1.58.0",
		"@types/node": "^24.10.0",
		"ts-proto": "^2.7.7",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.8",
		"@nestjs/microservices": "^11.1.7",
		"rxjs": "^7.8.2"
	}
}
